generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User{
  id        Int @id @default(autoincrement())
  nome      String
  email     String @unique
  telefone  String?
  senha     String
  ativo     Boolean @default(true)

  carrinho  Carrinho?
  pedidos  Pedido[]
}

model Categoria{
  id          Int @id @default(autoincrement())
  categoria   String @unique

  produtos Product[]
}

model Product{
  id                Int @id @default(autoincrement())
  categoriaId       Int
  produto           String @unique
  preco             Float
  imagem_produto    Bytes?

  categoria      Categoria  @relation(fields: [categoriaId], references: [id])
  itensCarrinho  CarrinhoItem[]
  itensPedido    PedidoItem[]
}

model Carrinho{
  id      Int   @id @default(autoincrement())
  userId  Int   @unique
  user    User  @relation(fields: [userId], references: [id])

  itens   CarrinhoItem[]
}

model CarrinhoItem {
  id          Int @id @default(autoincrement())
  carrinhoId  Int
  productId   Int
  quantidade  Int @default(1)

  carrinho    Carrinho @relation(fields: [carrinhoId], references: [id])
  product     Product  @relation(fields: [productId], references: [id])
}

model Pedido {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  
  total     Float    // O valor total do pedido
  status    String   @default("PENDENTE") // Ex: PENDENTE, EM_PREPARO, ENTREGUE
  
  itens     PedidoItem[] // Os itens que compõem este pedido
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PedidoItem {
  id        Int @id @default(autoincrement())
  pedidoId  Int
  pedido    Pedido @relation(fields: [pedidoId], references: [id])

  productId Int
  product   Product @relation(fields: [productId], references: [id])
  
  quantidade  Int
  
  // CAMPO MAIS IMPORTANTE:
  // Salva o preço do produto no momento da compra
  precoNoMomento Float 

  @@unique([pedidoId, productId]) // Evita duplicatas de produtos no mesmo pedido
}